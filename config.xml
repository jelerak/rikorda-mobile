<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id = "it.rikorda.mobile"
        version = "2.0.0">
    <name>Rikorda Mobile</name>

    <description>
        Mobile app for the Rikorda.it website.
    </description>

    <feature name="http://api.phonegap.com/1.0/device" />

    <preference name="phonegap-version" value="2.0.0" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />

    <icon src="icon.png" />
    <icon src="res/icon/icon-36.png" gap:platform="android" gap:density="ldpi" />
    <icon src="res/icon/icon-48.png" gap:platform="android" gap:density="mdpi" />
    <icon src="res/icon/icon-72.png" gap:platform="android" gap:density="hdpi" />
    <icon src="res/icon/icon-57.png" gap:platform="ios" width="57" height="57" />
    <icon src="res/icon/icon-72.png" gap:platform="ios" width="72" height="72" />

    <gap:splash src="res/screen/screen.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="res/screen/screen.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="res/screen/screen.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="res/screen/screen.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="res/screen/screen.png" gap:platform="ios" width="640" height="960" />
</widget>